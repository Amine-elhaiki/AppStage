APP_NAME="PlanifTech ORMVAT"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Configuration de la base de données
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=planiftech_db
DB_USERNAME=root
DB_PASSWORD=

# Configuration de diffusion (optionnel)
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Configuration Redis (optionnel)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Configuration Email (pour les notifications futures)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@ormvat.ma"
MAIL_FROM_NAME="${APP_NAME}"

# Configuration AWS (si utilisation S3 pour stockage fichiers)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Configuration Pusher (pour notifications temps réel futures)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Configuration Vite (pour le build des assets)
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Configuration spécifique PlanifTech
PLANIFTECH_VERSION=1.0.0
PLANIFTECH_ORGANIZATION="ORMVAT"
PLANIFTECH_CONTACT_EMAIL="support@ormvat.ma"

# Paramètres de sécurité
SESSION_SECURE_COOKIE=false
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,127.0.0.1:8000,::1

# Configuration du stockage des fichiers
FILESYSTEM_DISK=local
MAX_FILE_SIZE=10240
ALLOWED_FILE_TYPES="pdf,doc,docx,jpg,jpeg,png,gif"

# Configuration des notifications
NOTIFICATION_CHANNELS=database
NOTIFICATION_QUEUE=default

# Paramètres métier ORMVAT
DEFAULT_TASK_PRIORITY=moyenne
DEFAULT_PROJECT_STATUS=planifie
DEFAULT_EVENT_TYPE=intervention
MAX_TASKS_PER_USER=50
MAX_PROJECTS_PER_MANAGER=10

# Configuration du timezone
APP_TIMEZONE=Africa/Casablanca

# Configuration des logs
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Configuration de développement
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false

# Configuration de backup (optionnel)
BACKUP_DISK=local
BACKUP_SCHEDULE="0 2 * * *"

# Configuration de maintenance
MAINTENANCE_MODE=false
MAINTENANCE_SECRET=

# Paramètres de performance
CACHE_TTL=3600
API_RATE_LIMIT=60
SESSION_CLEANUP_PROBABILITY=2

# Configuration locale
APP_LOCALE=fr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=fr_FR
